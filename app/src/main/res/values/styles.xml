<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FlatButton" parent="Widget.AppCompat.Button.Borderless" />

    <style name="AppTheme.FirstLaunchButton" parent="AppTheme">
        <item name="colorAccent">@color/colorAccentSub</item>
    </style>

    <style name="AppTheme.Switch" parent="AppTheme">
        <item name="colorAccent">@color/colorAccentSub</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BillingBaseButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">@dimen/billing_button_width</item>
        <item name="android:layout_height">@dimen/billing_button_height</item>
    </style>

    <style name="BillingButtonStyle" parent="BillingBaseButtonStyle">
        <item name="android:background">@color/billing_ascent_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="BillingDriveButtonStyle" parent="BillingButtonStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/billing_ascent_color</item>
    </style>

    <style name="BillingCardViewStyle" parent="CardView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/billing_card_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/billing_card_view_margin</item>
        <item name="cardCornerRadius">@dimen/billing_card_view_card_corner_radius</item>
        <item name="cardElevation">@dimen/billing_card_view_card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="BillingToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@android:color/white</item>
    </style>

</resources>
