<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.coinkarasu.activities.HomeTabCardFragment">

    <!--<TextView-->
    <!--android:id="@+id/caption_left"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
    <!--android:textColor="#000000"-->
    <!--tools:text="@string/caption_day" />-->

    <TextView
        android:id="@+id/caption_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Trending"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        tools:text="@string/caption_day" />

    <TextView
        android:id="@+id/caption_desc_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/caption_right"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/caption_right"
        android:text="in"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#ff888888"
        tools:text="@string/caption_desc_day" />

    <TextView
        android:id="@+id/caption_desc_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/caption_desc_left"
        android:layout_toRightOf="@id/caption_desc_left"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#33b5e5"
        tools:text="@string/caption_desc_day" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/caption_right"
        android:paddingBottom="16dp"
        android:paddingTop="16dp" />

    <ImageButton
        android:id="@+id/popup_menu"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/filter"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/filter"
        android:background="#ffffff"
        android:src="@drawable/ic_trending_card_filter_list" />

    <TextView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="@string/dic_filter"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
</RelativeLayout>
