<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.coinkarasu.activities.CoinActivity">

    <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/screen_wait"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateDrawable="@anim/progress" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/trending_1_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/home_tab_spacing"
                    android:layout_marginRight="@dimen/home_tab_spacing"
                    android:layout_marginTop="@dimen/home_tab_spacing"
                    android:background="#ffffff" />

                <android.support.v7.widget.CardView
                    android:id="@+id/trending_6_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/home_tab_spacing"
                    android:layout_marginRight="@dimen/home_tab_spacing"
                    android:layout_marginTop="@dimen/home_tab_spacing"
                    android:background="#ffffff" />

                <android.support.v7.widget.CardView
                    android:id="@+id/trending_12_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/home_tab_spacing"
                    android:layout_marginRight="@dimen/home_tab_spacing"
                    android:layout_marginTop="@dimen/home_tab_spacing"
                    android:background="#ffffff" />

                <android.support.v7.widget.CardView
                    android:id="@+id/trending_24_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/home_tab_spacing"
                    android:layout_marginRight="@dimen/home_tab_spacing"
                    android:layout_marginTop="@dimen/home_tab_spacing"
                    android:background="#ffffff" />

                <android.support.v7.widget.CardView
                    android:id="@+id/trending_3_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/home_tab_spacing"
                    android:layout_marginLeft="@dimen/home_tab_spacing"
                    android:layout_marginRight="@dimen/home_tab_spacing"
                    android:layout_marginTop="@dimen/home_tab_spacing"
                    android:background="#ffffff" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
